pipeline {
    agent any
    stages {
        stage('checkout code'){
            steps {
                checkout([$class: 'GitSCM',
                branches: [[name: '*/main']],
                extensions: scm.extensions,
                userRemoteConfigs: [[
                    url: 'git@github.com:squapllabs/omni-flux.git',
                    credentialsId: 'GitCredentials'
                ]]
            ])
            echo 'git checkout completed'
            }
		}
      
pipeline {
    agent any
    tools {
           maven "M3"
	 	}

    stages {
        stage('Code Quality Check & Build') {
            steps {
                // Get some code from a GitHub repository
              //  checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'GitCredentials', url: 'git@github.com:squapllabs/omni-flux.git']]])
 
		withSonarQubeEnv(installationName: 'SonarQube_Server') {
	        sh 'mvn clean package sonar:sonar'
		    }

}
}
}
}
}
}
