// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DEV_DATABASE_URL")
}

model users {
  	user_id           BigInt      @id@default(autoincrement())
  	center_id         Int?      
	first_name        String?     @db.VarChar(45)
	last_name         String?     @db.VarChar(45)
	user_name         String?     @db.VarChar(45)
	user_password     String?     @db.VarChar(255)
	mobile_number     String?     @db.VarChar(20)
	email_id          String      @db.VarChar(150)
	profile_img_url   String?     @db.VarChar(150)
	gender            String?     @db.VarChar(10)
	dob               DateTime?   @db.Date
	status            String?     @db.VarChar(20)
	address           String?     @db.VarChar(350)
	created_by        Int?        
	created_date      DateTime   
	updated_by        Int?
	updated_date      DateTime   
  @@unique([email_id], name: "unique_email_id")
  @@unique([user_name], name: "users_username_unique")
  @@unique([user_id], name:"users_id_unique")
}

model user_role {
  	user_role_id      BigInt      @id@default(autoincrement())
  	role_id           Int?      
	user_id        	  Int?     
}